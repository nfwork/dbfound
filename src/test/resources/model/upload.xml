<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://dbfound.googlecode.com/model" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://dbfound.googlecode.com/model https://raw.githubusercontent.com/nfwork/dbfound/master/tags/model.xsd">
	<query>
		<param name="table_name" dataType="varchar" />
		<param name="pk_value" dataType="varchar" />
		<sql>
	      <![CDATA[
	        select file_name,
	               file_type,
	               file_id,
	               file_size 
	          from sys_upload_file
	         where table_name = ${@table_name}
               and pk_value = ${@pk_value}
          ]]>
		</sql>
	</query>
	
	<query name="count">
		<param name="table_name" dataType="varchar" />
		<param name="pk_value" dataType="varchar" />
		<sql>
	      <![CDATA[
	        select count(1) total_num
	          from sys_upload_file
	         where table_name = ${@table_name}
               and pk_value = ${@pk_value}
          ]]>
		</sql>
	</query>

	<execute name="add">
		<param name="file_id" UUID="true" />
		<param name="file_name" dataType="varchar" />
		<param name="file_type" dataType="varchar" />
		<param name="file_size" dataType="varchar" />
		<param name="table_name" dataType="varchar" />
		<param name="pk_value" dataType="varchar" />
		<param name="file" dataType="file" />
		<sqls>
			<executeSql>
	          <![CDATA[
	             insert into sys_upload_file
	                   (file_id,
	                    file_name,
	                    file_content,
	                    file_type,
	                    file_size,
	                    table_name,
	                    pk_value)
	             values (${@file_id},
	                    ${@file_name},
	                    ${@file},
	                    ${@file_type},
	                    ${@file_size},
	                    ${@table_name},
	                    ${@pk_value})
	          ]]>
			</executeSql>
		</sqls>
	</execute>

	<execute name="delete">
		<param name="file_id" dataType="varchar" />
		<sqls>
			<executeSql>
			  <![CDATA[
				delete from sys_upload_file where file_id = ${@file_id}
			  ]]>
			</executeSql>
		</sqls>
	</execute>
</model>
